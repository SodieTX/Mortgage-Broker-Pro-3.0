# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/mortgage_broker_pro

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (Legacy)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mortgage_broker
DB_USER=postgres
DB_PASSWORD=your_password

# Logging
LOG_LEVEL=info

# JWT Secret for authentication
JWT_SECRET=your-secret-key-change-in-production

# Application URL (for email links)
APP_URL=http://localhost:3000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="Mortgage Broker Pro" <noreply@mortgagebrokerpro.com>
EMAIL_REPLY_TO=support@mortgagebrokerpro.com

# Redis Configuration (for email queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Additional Email Providers (optional)
# SendGrid
SENDGRID_API_KEY=

# Mailgun
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
MAILGUN_EU=false

# AWS SES
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Email Service Notes:
# For Gmail:
# 1. Enable 2-factor authentication
# 2. Generate an app-specific password
# 3. Use that password for SMTP_PASS
#
# For other providers:
# - SendGrid: SMTP_HOST=smtp.sendgrid.net, SMTP_PORT=587
# - Mailgun: SMTP_HOST=smtp.mailgun.org, SMTP_PORT=587
# - AWS SES: SMTP_HOST=email-smtp.region.amazonaws.com, SMTP_PORT=587
#
# Multiple providers will be used with automatic fallback
# Priority: Primary SMTP -> SendGrid -> Mailgun -> AWS SES
